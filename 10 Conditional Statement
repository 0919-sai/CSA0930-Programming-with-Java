public class GreatestIfValue {
    public static void main(String[] args) {
        int value1 = 10;
        int value2 = 20;
        int value3 = 30;

        if (value1 > value2) {
            if (value1 > value3) {
                System.out.println("The greatest value is value1 with a value of: " + value1);
            } else {
                System.out.println("The greatest value is value3 with a value of: " + value3);
            }
        } else {
            if (value2 > value3) {
                System.out.println("The greatest value is value2 with a value of: " + value2);
            } else {
                System.out.println("The greatest value is value3 with a value of: " + value3);
            }
        }
    }
}
